<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.server.mapper.UserMapper">

    <select id="selectById" resultType="org.example.server.pojo.User">
        select *
        from User
        where "id" = #{id}
    </select>

    <update id="updatePassword" >
        update User
        set "password" = #{password}
        where "person_num" = #{person_num}
    </update>
    <delete id="deleteByPersonNum" parameterType="String">
        delete from User where "person_num" = #{person_num}
    </delete>
    <select id="selectByPersonNum" resultType="org.example.server.pojo.User">
        select *
        from User
        where "person_num" = #{person_num}
    </select>

</mapper>